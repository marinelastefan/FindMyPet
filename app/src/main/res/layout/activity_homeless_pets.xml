<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomelessPets">

    <Button
        android:id="@+id/showClinics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clinics"
        android:onClick="clickedOnClinics"
         />
    <Button
        android:id="@+id/showVolunteers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volunteers"
        android:onClick="clickedOnVolunteers"
        />
    <Button
        android:id="@+id/showFosters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adoption centers"
        android:onClick="clickedOnFosters"
        />

    <ListView
        android:id="@+id/listViewClinics"
        android:layout_width="409dp"
        android:layout_height="681dp"
     />
</LinearLayout>